<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="org.preethi.lib.NewBookController">

    <Label text="Enter Book Details" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Semester:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="semesterField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Engg/MBA:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="enggMbaField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Month:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="monthField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Date of Invoice:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <DatePicker fx:id="dateOfInvoiceField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Purchase Type:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="purchaseTypeField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Invoice No:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="invoiceNoField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Department Subject:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="departmentSubjectField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="Book Accn No (From):" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextField fx:id="bookAccnNoFromField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

        <Label text="Book Accn No (To):" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <TextField fx:id="bookAccnNoToField" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

        <Label text="No. of Books:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
        <TextField fx:id="noOfBooksField" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

        <Label text="No. of Books Purchased:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
        <TextField fx:id="noOfBooksPurchasedField" GridPane.columnIndex="1" GridPane.rowIndex="12"/>

        <Label text="No. of Books Donated:" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
        <TextField fx:id="noOfBooksDonatedField" GridPane.columnIndex="1" GridPane.rowIndex="13"/>

        <Label text="Acc. Reg No:" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
        <TextField fx:id="accRegNoField" GridPane.columnIndex="1" GridPane.rowIndex="14"/>

        <Label text="Accn Register Page No (From):" GridPane.columnIndex="0" GridPane.rowIndex="15"/>
        <TextField fx:id="accnRegisterPageNoFromField" GridPane.columnIndex="1" GridPane.rowIndex="15"/>

        <Label text="Accn Register Page No (To):" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
        <TextField fx:id="accnRegisterPageNoToField" GridPane.columnIndex="1" GridPane.rowIndex="16"/>

        <Label text="Discount Percentage:" GridPane.columnIndex="0" GridPane.rowIndex="17"/>
        <TextField fx:id="discountPercentageField" GridPane.columnIndex="1" GridPane.rowIndex="17"/>

        <Label text="Gross Invoice Amount:" GridPane.columnIndex="0" GridPane.rowIndex="18"/>
        <TextField fx:id="grossInvoiceAmountField" GridPane.columnIndex="1" GridPane.rowIndex="18"/>

        <Label text="Discount Amount:" GridPane.columnIndex="0" GridPane.rowIndex="19"/>
        <TextField fx:id="discountAmountField" GridPane.rowIndex="19"/>

        <Label text="Net Amount:" GridPane.columnIndex="0" GridPane.rowIndex="20"/>
        <TextField fx:id="netAmountField" GridPane.columnIndex="1" GridPane.rowIndex="20"/>
    </GridPane>

    <Button text="Save" onAction="#saveBook"/>
</VBox>
